#!/bin/bash

set -e
. /usr/local/share/chruby/chruby.sh


cd .code/ruby

websocket-driver-ruby-server() {
  cd "$1/driver"
  chruby "$1"
  ruby -S bundle exec rake compile
  ruby examples/em_server.rb "$2" &
  cd -
}

websocket-driver-ruby-server  1.9.3   6001
websocket-driver-ruby-server  2.0.0   6002
websocket-driver-ruby-server  2.1.10  6003
websocket-driver-ruby-server  2.2.10  6004
websocket-driver-ruby-server  2.3.8   6005
websocket-driver-ruby-server  2.4.6   6006
websocket-driver-ruby-server  2.5.5   6007
websocket-driver-ruby-server  2.6.3   6008

cd jruby-1.7/driver
chruby jruby-1.7
ruby -S bundle exec rake compile
ruby -J-Xmx2048m --1.9 examples/em_server.rb 6009 &
ruby -J-Xmx2048m --2.0 examples/em_server.rb 6010 &
cd -


faye-websocket-ruby-server() {
  cd "$1/websocket"
  chruby "$1"
  ruby examples/server.rb "$3" '' "$2" &
  cd -
}

cd 2.6.3/websocket
chruby 2.6.3
ruby examples/server.rb 7001 '' goliath -svp 7001 &
cd examples
ruby -S bundle exec passenger start -p 7002 &
cd ../../..

faye-websocket-ruby-server  2.6.3   puma      7003
faye-websocket-ruby-server  2.6.3   rainbows  7004
faye-websocket-ruby-server  2.6.3   thin      7005
faye-websocket-ruby-server  2.5.5   thin      7006
faye-websocket-ruby-server  2.4.6   thin      7007
faye-websocket-ruby-server  2.3.8   thin      7008
faye-websocket-ruby-server  2.2.10  thin      7009
faye-websocket-ruby-server  2.1.10  thin      7010
faye-websocket-ruby-server  2.0.0   thin      7011
faye-websocket-ruby-server  1.9.3   thin      7012

cd jruby-1.7/websocket
chruby jruby-1.7
ruby -J-Xmx2048m --2.0 examples/server.rb 7013 '' puma &
ruby -J-Xmx2048m --1.9 examples/server.rb 7014 '' puma &
cd -
